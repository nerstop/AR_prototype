<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.vind.android.ar.activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="6">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_weight="5"
                    android:id="@+id/lv_main_menu"
                    android:src="@drawable/main_menu"/>
                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="57dp"-->
                    <!--android:layout_weight="1">-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="28dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:text="Irene Sohyun Kim"
                        android:textSize ="22sp"
                        android:textColor="#00408C"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_weight="6"
                android:id="@+id/lv_home"
                android:src="@drawable/main_home"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:src="@drawable/main_cash"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textColor="#e00036"
                android:text="102"
                android:textSize ="16sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="118dp"/>

        <!-- -&#45;&#45;&#45;&#45;195dp-&#45;&#45;&#45;&#45;&#45;&#45;-->


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView2">
            <!-- everything you already have -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/lv_weight"
                    android:src="@drawable/main_wiget_weight"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="9dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:src="@drawable/main_wiget_weekend"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="9dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:src="@drawable/main_wiget_timewatch"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/main_wiget_plus"/>
                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="160dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:id="@+id/lv_general"-->
                    <!--android:src="@drawable/main_wiget_weight_plus"/>-->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout_menu"
        android:background="#9f000000"
        android:orientation="vertical"
        android:visibility="invisible">
        <!--android:visibility="invisible">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@drawable/menu_box"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="46dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="21">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:weightSum="22">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_weight="4"
                        android:id="@+id/lv_main_menu_workout"
                        android:src="@drawable/menu_workout_off"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_weight="4"
                        android:id="@+id/lv_main_menu_people"
                        android:src="@drawable/menu_people_off"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:src="@drawable/menu_ranking_off"
                        android:id="@+id/lv_main_menu_rank"
                        android:layout_weight="4"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="21">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:weightSum="22">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_weight="4"
                        android:id="@+id/lv_main_menu_program"
                        android:src="@drawable/menu_program_off"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_weight="4"
                        android:id="@+id/lv_main_menu_gift"
                        android:src="@drawable/menu_gift_off"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:id="@+id/lv_main_menu_more"
                        android:src="@drawable/menu_more_off"
                        android:layout_weight="4"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_layout_menu_out"/>

    </LinearLayout>
</RelativeLayout>
